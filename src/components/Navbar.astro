---
import github from "../assets/github.svg";
import linkedin from "../assets/linkedin.svg";
import youtube from "../assets/youtube.svg";

import LanguageSelector from "./LanguageSelector.astro";
import NavbarMobileMenu from "./NavbarMobileMenu.astro";
import ThemeToggle from "./ThemeToggle.astro";

const activeLink = Astro.url.pathname;
const links = [
  {
    label: "Home",
    labelKey: "nav.home",
    href: "/",
    isActive: activeLink === "/",
  },
  // TODO: Implement projects page (with detailed explanation about each project/work experience)
  // {
  //     label: "Projects",
  //     href: "/projects",
  //     isActive: activeLink === "/projects",
  // },
  {
    label: "About",
    labelKey: "nav.about",
    href: "/about",
    isActive: activeLink.includes("/about"),
  },
];
---

<div class="flex justify-between items-center w-full py-4">
  <a href="/">
    <h1 class="text-2xl font-bold dark:text-white">
      Jonathan <span class="text-green-700">Peraza</span>
    </h1>
  </a>

  <NavbarMobileMenu />

  <div
    class="hidden md:flex items-center gap-4 border-2 border-green-700 rounded-full py-2 px-4"
  >
    {
      links.map((link) => (
        <a
          href={link.href}
          data-translate={link.labelKey}
          class:list={[
            "text-gray-600 dark:text-white",
            "text-sm",
            "font-medium",
            "hover:text-green-700",
            "transition-all",
            "duration-300",
            link.isActive ? "text-green-700 dark:text-green-400!" : "",
          ]}
        >
          {link.label}
        </a>
      ))
    }
  </div>

  <div class="hidden md:flex items-center gap-4">
    <a href="https://github.com/imjpfeliciano" target="_blank">
      <img src={github.src} alt="GitHub" class="w-6 h-6 dark:invert" />
    </a>
    <a href="https://www.linkedin.com/in/jpfeliciano/" target="_blank">
      <img src={linkedin.src} alt="LinkedIn" class="w-6 h-6 dark:invert" />
    </a>
    <a href="https://youtube.com/@imjpfeliciano" target="_blank">
      <img src={youtube.src} alt="YouTube" class="w-6 h-6 dark:invert" />
    </a>

    <LanguageSelector />
    <ThemeToggle />
  </div>
</div>
