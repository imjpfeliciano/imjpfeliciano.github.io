---
const role = Astro.props.role;
const company = Astro.props.company;
const startDate = Astro.props.startDate;
const endDate = Astro.props.endDate;
---

<div class="flex flex-col gap-2">
  <div class="flex flex-row gap-2">
    <span class="font-semibold dark:text-white">{role}</span>
    <span class="text-gray-600 dark:text-gray-400">{company}</span>
  </div>
  <div class="text-gray-600 dark:text-gray-400">{startDate} - {endDate}</div>
  <div class="text-gray-600 dark:text-gray-400">
    <slot />
  </div>
</div>
