---
import { SendHorizontal } from "@lucide/astro";
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Jonathan Peraza's personal website" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>imjpfeliciano.dev</title>
    <script is:inline>
      // Apply theme immediately to prevent flash of unstyled content
      (function () {
        const theme = localStorage.getItem("theme");
        if (theme === "dark") {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      })();
    </script>
  </head>
  <body class="bg-slate-100 dark:bg-slate-900">
    <div class="w-screen h-screen px-4">
      <!-- <img id="background" src={background.src} alt="" fetchpriority="high" /> -->
      <main
        class="flex flex-col items-center justify-center w-full border-b-2 border-gray-300 dark:border-gray-700 pb-8"
      >
        <Navbar />
        <slot />
      </main>
      <div
        class="py-16 px-4 flex flex-col md:flex-row gap-4 md:gap-0 items-center justify-between max-w-5xl mx-auto"
      >
        <p
          class="text-center text-gray-600 dark:text-gray-300 text-2xl font-semibold"
        >
          Interested in working together?
        </p>
        <a
          href="mailto:jperazafeliciano@gmail.com"
          class="bg-green-700 text-white font-semibold px-4 py-2 rounded-full text-xl w-fit flex flex-row gap-2 items-center justify-center cursor-pointer hover:bg-green-600 transition-all duration-300 shadow-lg"
        >
          Send me a message <SendHorizontal />
        </a>
      </div>
      <footer
        class="text-center text-sm text-gray-600 dark:text-gray-300 border-t-2 border-gray-300 dark:border-gray-700 py-4"
      >
        Made with ❤️ by Jonathan Peraza
      </footer>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }

  #container {
    font-family:
      Inter, Roboto, "Helvetica Neue", "Arial Nova", "Nimbus Sans", Arial,
      sans-serif;
    height: 100%;
  }
</style>
